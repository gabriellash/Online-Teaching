        <activity android:name=".Activity.CategoryCourses" />
        <activity android:name=".Activity.AllCategories" />
        <activity android:name=".Activity.EditInstProfile" />
        <activity android:name=".Activity.CreateCourse" />
        <activity android:name=".Activity.Home" />
        <activity android:name=".Activity.Dashboard" />
        <activity
            android:name=".Activity.InstructorSignUp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity.Login"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.StudentSignUp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Activity.MainActivity" />
