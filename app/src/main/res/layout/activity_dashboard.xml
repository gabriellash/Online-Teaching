<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    tools:context=".Dashboard">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Welcome back!"
            android:textColor="@color/keppel"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/instructorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:fontFamily="@font/poppinsbold"
            android:text="Instructor"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/hand" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instructorName"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal"
            android:id="@+id/coursesLayout">

                <Button
                    android:id="@+id/createCourseButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:backgroundTint="@color/ocean_green"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Create Course"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/add_24"
                    app:iconGravity="textTop"
                    app:iconPadding="35dp"
                    app:iconTint="@color/white"

                    />

                <Button
                    android:id="@+id/manageCourseButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/keppel"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Manage Course"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/edit_24"
                    app:iconGravity="textTop"
                    app:iconPadding="35dp"
                    app:iconTint="@color/white"

                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursesLayout"
            android:layout_marginRight="0dp"
            android:orientation="horizontal"
            android:id="@+id/detailsLayout">

                <Button
                    android:id="@+id/enrolledStudentsButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:backgroundTint="@color/Vgreen"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Enrolled Students"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/group_24"
                    app:iconGravity="textTop"
                    app:iconPadding="35dp"
                    app:iconTint="@color/white"

                    />

                <Button
                    android:id="@+id/paymentHistoryButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="185dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/Mblue"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Payments History"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/money_24"
                    app:iconGravity="textTop"
                    app:iconPadding="35dp"
                    app:iconTint="@color/white"

                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsLayout"
            android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cornerRadius="10dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:backgroundTint="#1E6091"
                    android:text="Edit Profile"
                    app:icon="@drawable/person_24"
                    app:iconTint="@color/white"
                    app:iconGravity="textTop"
                    app:iconPadding="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="#B5E48C"
                    android:text="LOGOUT"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

        </LinearLayout>









</RelativeLayout>